
<div class="mx-auto max-w-screen-lg w-80 p-5 mt-10 mb-10 bg-rose-600 flex flex-col lg:w-100 sm:w-2/5">
  
    <form id="login" action="/auth/signup" method="POST" class="flex flex-col gap-5">

      <label class="flex flex-col text-lime-500"> Username:
        <input type="text" name="username" placeholder="Your username" class="bg-white p-2 text-slate-500" />
      </label>

      <label class="flex flex-col text-lime-500"> Email:
        <input type="email" name="email" placeholder="Your email" class="bg-white p-2 text-slate-500"/>
      </label>

      <label class="flex flex-col text-lime-500"> Password:
        <input type="password" name="password" placeholder="Your password" class="bg-white p-2 text-slate-500" />
      </label>

      <button type="submit" class="bg-lime-500 p-2 cursor-pointer text-rose-600">Sign Up</button>


      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
