<div id="container">

  <div id="center-container">
    

    <form id="login" action="/heroes/create" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
        
        <h3>Create your profile</h3>
        
        <input type="hidden" name="id" value="{{ id }}">
        <label> Name:
            <input type="text" name="name" value="{{name}}" />
        </label>

        <label> Gender:
            <input type="text" name="gender" value="{{gender}}" />
        </label>

        <label> Specie:
            <input type="text" name="specie" value="{{specie}}" />
        </label>

        <label> Origin:
            <input type="text" name="origin" value="{{origin}}" />
        </label>

        <label> Affiliation:
            <input type="text" name="affiliation" value="{{affiliation}}" />
        </label>    

        <label> Abilities:
            <textarea name="abilities" cols="30" rows="4" class="text-abilities">{{abilities}}</textarea>
        </label>

        <label>
            <input type="file" name='hero-cover-image'/>
        </label>

        <button type="submit">Create</button>
    </form>
    
  </div>
</div>